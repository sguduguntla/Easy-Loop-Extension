{
  "name": "School Loop Easy Loop",
  "short_name": "Easy Loop",
  "version": "2.1.6.7",
  "description": "An extension that enhances the schoolloop interface to allow easy grade calculation",
  "manifest_version": 2,
  "background": {
    "scripts": ["back_script.js"]
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://*.firebaseio-demo.com; object-src 'self'",
  "browser_action": {
    "name": "Make grade calculation easier!",
    "default_icon": "images/easyloop-logo.png",
    "default_popup": "website/index.html"
  },
  "content_scripts": [{
    "js": ["jquery-1.11.3.min.js", "angular.min.js", "bootstrap/js/bootstrap.min.js", "user.js", "background.js"],
    "css": ["customStyles.css", "animate.css"],
    "matches": ["http://*.schoolloop.com/progress_report/*", "https://*.schoolloop.com/progress_report/*"]
  }, {
    "matches": ["https://*.schoolloop.com/portal/student_home"],
    "css": ["customStyles.css", "animate.css", "jquery-ui.min.css", "jquery-ui.theme.min.css"],
    "js": ["jquery-1.11.3.min.js", "jquery-ui.min.js", "angular.min.js", "bootstrap/js/bootstrap.min.js", "firebase.js", "background2.js"]
  }]
}
